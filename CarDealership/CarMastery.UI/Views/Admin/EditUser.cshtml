@model  CarMastery.UI.Models.EditUserViewModel
@{
    ViewBag.Title = "EditUser";
}

<h2><strong>Edit User</strong></h2>



@using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new { @class = "form-vertical", role = "form", id = "frmEditUser" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.OldRole)


    <div class="row">

        <div class="col-md-6 form-group">
            <label>First Name</label>
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>

        <div class="col-md-6 form-group">
            <label>Last Name</label>
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>

    </div>

    <div class="row">

        <div class="col-md-6 form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>

        <div class="col-md-6 form-group">
            <label>Role</label>
            @Html.DropDownListFor(m => m.SelectedRole, Model.Roles, new { @class = "form-control" })
        </div>

    </div>

    <div class="row">

        <div class="col-md-6 form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
        </div>

        <div class="col-md-6 form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>

    </div>

    <button class="btn btn-primary">Save</button>
}

