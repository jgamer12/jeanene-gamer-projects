@model CarMastery.Models.Tables.Vehicles
@{
    ViewBag.Title = "DeleteVehicle";
}

<h2><strong>DeleteVehicle</strong></h2>


<div class="row">

    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(v => v.VehicleId)
            <p>Are you sure that you want to delete this vehicle with VIN # @Html.DisplayFor(v => v.VehicleVIN)? </p>
            <button type="submit" class="btn btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "Vehicles", "Admin", null, new { @class = "btn btn-info"  })
        }
    </div>

</div>